<div><b>Table Format Data Displaying in ForEach</b><br /></div>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Number of adults </th>
        <th>Number of students </th>
        <th>Number of children </th>
        <th>Cost per person </th>
        <th>Number of vacation nights </th>
        <th>Number of weekend nights </th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.guestInfo.NumAdults</td>
            <td>@d.guestInfo.NumStudents</td>
            <td>@d.guestInfo.NumChildren</td>
            <td>@d.guestInfo.CostPerPerson</td>
            <td>@d.guestInfo.NumVacationNights</td>
            <td>@d.guestInfo.NumWeekendNights</td>
        </tr>
    }
</table>  